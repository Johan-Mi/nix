#!/bin/sh

statusfile="$HOME/.local/share/battery/has_warned"

for battery in /sys/class/power_supply/BAT?
do
	capacity=$(cat "$battery"/capacity) || exit
	status=$(cat "$battery"/status)

	if [ "$status" = 'Discharging' ] && [ "$capacity" -le 15 ]; then
		warn='!'
		if [ ! -f "$statusfile" ]; then
			notify-send -u critical "Battery level is low ($capacity%)"
			touch "$statusfile"
		fi
	else
		warn=''
		rm -f "$statusfile"
	fi

	echo "$status$warn$capacity%" | sed 's/,//;s/Discharging/ðŸ®¦/;s/Not charging/ðŸ®®/;s/Charging/ðŸ®§/;s/Unknown/ðŸ­¸/;s/Full/ðŸ®®/;s/ 0*/ /g;s/ :/ /g'
done
